{
  "compilerOptions": {
    "target": "ES2022", // Asegúrate de usar una versión compatible
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "types": ["node", "jquery"], // Incluye tipos para Node.js y jQuery
    "esModuleInterop": true, // Permite la importación por defecto de módulos CommonJS
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true, // Activa las opciones de modo estricto
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts"
  ]
}
